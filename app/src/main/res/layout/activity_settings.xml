<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:padding="20dp"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/settings"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/lineSeparatorTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnResetSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/restore_default_settings"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="restoreDefaultsClicked"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restore_settings" />

    <ImageButton
        android:id="@+id/btnToggleExpandedSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/toggle_expanded_settings"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="toggleExpandedSettings"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/glSettingsBottom"
        app:srcCompat="@drawable/expand_icon" />

    <TextView
        android:id="@+id/tvTogglePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/allerta"
        android:text="@string/show_more"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnToggleExpandedSettings"
        app:layout_constraintEnd_toStartOf="@+id/btnToggleExpandedSettings"
        app:layout_constraintTop_toTopOf="@+id/btnToggleExpandedSettings" />

    <View
        android:id="@+id/lineSeparatorTitle"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle" />

    <ScrollView
        android:id="@+id/svSettings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnToggleExpandedSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineSeparatorTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/tbSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/sound_toggle"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textOff=""
                android:textOn=""
                app:layout_constraintEnd_toStartOf="@+id/tbBackgroundMusic"
                app:layout_constraintStart_toStartOf="@+id/glStartSettings"
                app:layout_constraintTop_toBottomOf="@+id/btnResetSound" />

            <ToggleButton
                android:id="@+id/tbBackgroundMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_music_toggle"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textOff=""
                android:textOn=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/glStartSettings"
                app:layout_constraintTop_toBottomOf="@+id/btnResetBgMusic" />

            <ToggleButton
                android:id="@+id/tbVibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/vibrate_toggle"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textOff=""
                android:textOn=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tbBackgroundMusic"
                app:layout_constraintTop_toTopOf="@+id/tbBackgroundMusic" />


            <ImageButton
                android:id="@+id/btnResetSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_sound_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintEnd_toEndOf="@+id/tbSound"
                app:layout_constraintStart_toStartOf="@+id/tbSound"
                app:layout_constraintTop_toTopOf="@+id/btnResetBgMusic"
                app:srcCompat="@drawable/reset_setting_icon" />

            <ImageButton
                android:id="@+id/btnResetVibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_vibrate_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintEnd_toEndOf="@+id/tbVibrate"
                app:layout_constraintStart_toStartOf="@+id/tbVibrate"
                app:layout_constraintTop_toTopOf="@+id/btnResetBgMusic"
                app:srcCompat="@drawable/reset_setting_icon" />

            <ImageButton
                android:id="@+id/btnResetBgMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_background_music_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintEnd_toEndOf="@+id/tbBackgroundMusic"
                app:layout_constraintStart_toStartOf="@+id/tbBackgroundMusic"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/reset_setting_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchEndgameDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/endgame_dialog"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/glStartSettings"
                app:layout_constraintTop_toBottomOf="@+id/tbBackgroundMusic" />

            <ImageButton
                android:id="@+id/btnResetEndgameDial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_endgame_dialog_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/switchEndgameDialog"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/switchEndgameDialog"
                app:srcCompat="@drawable/reset_setting_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/show_hints"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/switchEndgameDialog"
                app:layout_constraintTop_toBottomOf="@+id/switchEndgameDialog" />

            <ImageButton
                android:id="@+id/btnResetShowHints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_show_hints_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/switchHint"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/switchHint"
                app:srcCompat="@drawable/reset_setting_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchAskBeforeSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/ask_before_save_game"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/switchHint"
                app:layout_constraintTop_toBottomOf="@+id/switchHint" />

            <ImageButton
                android:id="@+id/btnResetAskBeforeSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_ask_before_saving_game_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/switchAskBeforeSave"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/switchAskBeforeSave"
                app:srcCompat="@drawable/reset_setting_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchAlwaysLoadSavedGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/always_load_saved_game"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/switchAskBeforeSave"
                app:layout_constraintTop_toBottomOf="@+id/switchAskBeforeSave" />

            <ImageButton
                android:id="@+id/btnResetAlwaysLoadSavedGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_always_load_saved_game_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/switchAlwaysLoadSavedGame"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/switchAlwaysLoadSavedGame"
                app:srcCompat="@drawable/reset_setting_icon" />

            <ToggleButton
                android:id="@+id/tbStartPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:checked="true"
                android:textAllCaps="false"
                android:textOff="@string/second_player"
                android:textOn="@string/first_player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switchAlwaysLoadSavedGame" />

            <TextView
                android:id="@+id/tvStartPlayer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/starting_player"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/tbStartPlayer"
                app:layout_constraintEnd_toStartOf="@+id/tbStartPlayer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/switchAlwaysLoadSavedGame"
                app:layout_constraintTop_toTopOf="@id/tbStartPlayer" />

            <ImageButton
                android:id="@+id/btnResetStartPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_starting_player"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvStartPlayer"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvStartPlayer"
                app:srcCompat="@drawable/reset_setting_icon" />

            <ToggleButton
                android:id="@+id/tbTimeCounting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:checked="true"
                android:textAllCaps="false"
                android:textOff="@string/down"
                android:textOn="@string/up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbStartPlayer" />

            <TextView
                android:id="@+id/tvTimeCounting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/time_counting"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/tbTimeCounting"
                app:layout_constraintEnd_toStartOf="@+id/tbTimeCounting"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvStartPlayer"
                app:layout_constraintTop_toTopOf="@+id/tbTimeCounting" />

            <ImageButton
                android:id="@+id/btnResetTimeCounting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_time_counting_order"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvTimeCounting"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTimeCounting"
                app:srcCompat="@drawable/reset_setting_icon" />

            <ImageButton
                android:id="@+id/btnTimerPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/popup_game_duration_picker"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="displayTimerPicker"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/glStartSettings"
                app:layout_constraintTop_toBottomOf="@+id/tbTimeCounting"
                app:srcCompat="@drawable/hourglass_icon" />

            <Spinner
                android:id="@+id/spnFirstColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnTimerPicker" />

            <TextView
                android:id="@+id/tvFirstColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/first_player_color"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/spnFirstColor"
                app:layout_constraintEnd_toStartOf="@+id/spnFirstColor"
                app:layout_constraintStart_toStartOf="@+id/tvTimeCounting"
                app:layout_constraintTop_toTopOf="@+id/spnFirstColor" />

            <ImageButton
                android:id="@+id/btnResetFirstColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_first_player_s_piece_color"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvFirstColor"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvFirstColor"
                app:srcCompat="@drawable/reset_setting_icon" />

            <Spinner
                android:id="@+id/spnSecondColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFirstColor" />

            <TextView
                android:id="@+id/tvSecondColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/second_player_color"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/spnSecondColor"
                app:layout_constraintEnd_toStartOf="@+id/spnSecondColor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvFirstColor"
                app:layout_constraintTop_toTopOf="@+id/spnSecondColor" />

            <ImageButton
                android:id="@+id/btnResetSecondColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_second_player_s_color"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvSecondColor"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvSecondColor"
                app:srcCompat="@drawable/reset_setting_icon" />

            <RadioGroup
                android:id="@+id/sizesRG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:checkedButton="@id/rbBoardSize"
                android:gravity="bottom"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spnSecondColor">

                <RadioButton
                    android:id="@+id/rbBoardSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/board_matrix_side_size" />

                <RadioButton
                    android:id="@+id/rbStartSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/starting_size_for_each_player" />
            </RadioGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/boardSizeContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@id/startSizeContainer"
                app:layout_constraintEnd_toStartOf="@+id/sizesRG"
                app:layout_constraintStart_toStartOf="@+id/glStartSizes"
                app:layout_constraintTop_toTopOf="@+id/sizesRG">

                <Spinner
                    android:id="@+id/spnBoardSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etBoardSize"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ems="10"
                    android:hint="@string/board_size"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvBoardSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/board_size"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/boardSizeContainer"
                app:layout_constraintEnd_toStartOf="@+id/boardSizeContainer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvSecondColor"
                app:layout_constraintTop_toTopOf="@id/sizesRG" />

            <ImageButton
                android:id="@+id/btnResetBoardSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_board_size"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvBoardSize"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvBoardSize"
                app:srcCompat="@drawable/reset_setting_icon" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/startSizeContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/sizesRG"
                app:layout_constraintEnd_toEndOf="@+id/boardSizeContainer"
                app:layout_constraintStart_toStartOf="@+id/boardSizeContainer"
                app:layout_constraintTop_toBottomOf="@+id/boardSizeContainer">

                <Spinner
                    android:id="@+id/spnStartSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etStartSize"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ems="10"
                    android:hint="@string/start_size"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvStartSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/start_size"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/startSizeContainer"
                app:layout_constraintEnd_toStartOf="@+id/startSizeContainer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvBoardSize"
                app:layout_constraintTop_toTopOf="@+id/startSizeContainer" />

            <ImageButton
                android:id="@+id/btnResetStartSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_starting_size"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvStartSize"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvStartSize"
                app:srcCompat="@drawable/reset_setting_icon" />

            <Spinner
                android:id="@+id/spnDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sizesRG" />

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/default_difficulty"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/spnDifficulty"
                app:layout_constraintEnd_toStartOf="@+id/spnDifficulty"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tvStartSize"
                app:layout_constraintTop_toTopOf="@id/spnDifficulty" />

            <ImageButton
                android:id="@+id/btnResetDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_default_difficulty"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvDifficulty"
                app:layout_constraintEnd_toStartOf="@+id/glStartSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvDifficulty"
                app:srcCompat="@drawable/reset_setting_icon" />

            <ToggleButton
                android:id="@+id/tbHumanStarts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:checked="true"
                android:textAllCaps="false"
                android:textOff="@string/computer"
                android:textOn="@string/human"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spnDifficulty" />

            <TextView
                android:id="@+id/tvHumanStarts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/first_turn_player"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/tbHumanStarts"
                app:layout_constraintEnd_toStartOf="@+id/tbHumanStarts"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tvDifficulty"
                app:layout_constraintTop_toTopOf="@id/tbHumanStarts" />

            <ImageButton
                android:id="@+id/btnResetHumanStarts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/reset_human_starts_setting"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="resetSetting"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="@+id/tvHumanStarts"
                app:layout_constraintEnd_toStartOf="@+id/tvHumanStarts"
                app:layout_constraintStart_toStartOf="@id/btnResetDifficulty"
                app:layout_constraintTop_toTopOf="@+id/tvHumanStarts"
                app:srcCompat="@drawable/reset_setting_icon" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStartSizes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStartSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.11" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glSettingsBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <ScrollView
        android:id="@+id/svProfilePic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToggleExpandedSettings">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/takePicContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgShowPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/profile_image"
                android:foregroundGravity="bottom"
                android:onClick="setAction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/takePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/take_picture"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="setAction"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgShowPic"
                app:srcCompat="@drawable/take_picture" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
