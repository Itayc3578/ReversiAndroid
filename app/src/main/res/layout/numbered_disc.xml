<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <ImageView
        android:id="@+id/ivPiece"
        android:layout_width="@dimen/disc_display_img"
        android:layout_height="@dimen/disc_display_img"
        android:layout_gravity="center"
        android:contentDescription="@string/piece_amount"
        android:src="@drawable/disc_img"/>

    <TextView
        android:id="@+id/tvPiece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/x"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</FrameLayout>